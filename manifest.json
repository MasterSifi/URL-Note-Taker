{
	"manifest_version" : 3,
	"name" : "URL Note Taker",
	"author" : "Deepak",
	"version" : "1.0",
	"description" : "Save Website Links with Notes.",
	
	"icons" : {
		"225" : "icon.png"
	},
	
	"action" : {
		"default_popup" : "index.html",
		"default_icon" : "icon.png"
	},
	
	"permissions": [
		"tabs",
		"bookmarks",
		"unlimitedStorage",
		"activeTab"
	],
	
	"background": {
		"service_worker": "index.js"
	}
}